// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int          @default(autoincrement()) @id 
  name        String
  birthday    String
  email       String        @unique
  password    String
  image       String?
  bio         String?
  followers   Followers[]
  following   Following[]
  tweets      Tweet[]
  createdAt   DateTime      @default(now()) 
  updatedAt   DateTime      @updatedAt
}

model Followers {
  id              Int       @default(autoincrement()) @id 
  followerId      Int
  userId          Int?
  users           User?     @relation(fields: [userId], references: [id])
}

model Following {
  id              Int       @default(autoincrement()) @id 
  followingId     Int
  userId          Int
  users           User?     @relation(fields: [userId], references: [id])
}

model Tweet {
  id           Int          @default(autoincrement()) @id 
  userId       Int
  tweetAuthor  User?        @relation(fields: [userId], references: [id])
  text         String       @db.VarChar(280)
  emoji        String?
  likes        Int
  createdAt    DateTime     @default(now())
}